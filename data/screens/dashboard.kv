DomoticXScreen:
    name: 'Dashboard'

    GridLayout:
        rows: 2
        cols: 4
        spacing: '8dp'
        padding: '8dp'

        Button:
            size_hint_y: None
            text: 'Lights'
            Image:
                source: 'data/icons/iconset/light.png'
                y: self.parent.y + self.parent.height - 200
                x: self.parent.x
    Label:
        text: "A label"

        Button:
            size_hint_y: None
            text: 'Temperatures'
            Image:
                source: 'data/icons/iconset/temp.png'
                y: self.parent.y + self.parent.height - 200
                x: self.parent.x

        Button:
            size_hint_y: None
            text: 'Scenarios'
            Image:
                source: 'data/icons/iconset/scenes.png'
                y: self.parent.y + self.parent.height - 200
                x: self.parent.x

        Button:
            size_hint_y: None
            text: 'Time'
            Image:
                source: 'data/icons/iconset/circle.png'
                y: self.parent.y + self.parent.height - 200
                x: self.parent.x

        Button:
            size_hint_y: None
            text: 'Weather'
            Image:
                source: 'data/icons/iconset/weather.png'
                y: self.parent.y + self.parent.height - 200
                x: self.parent.x

        Button:
            size_hint_y: None
            text: 'Configuration'
            Image:
                source: 'data/icons/iconset/wrench.png'
                y: self.parent.y + self.parent.height - 200
                x: self.parent.x

