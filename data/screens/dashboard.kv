DomoticXScreen:
    name: 'Dashboard'

    GridLayout:
        rows: 2
        cols: 4
        spacing: '8dp'
        padding: '8dp'

        Button:
            size_hint_y: None
            text: 'Lights'
            Image:
                source: 'data/icons/iconset/light.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        Button:
            size_hint_y: None
            text: 'Temperatures'
            Image:
                source: 'data/icons/iconset/temp.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y


        Button:
            size_hint_y: None
            text: 'Scenarios'
            Image:
                source: 'data/icons/iconset/scenes.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y


        Button:
            size_hint_y: None
            text: 'Time'
            Image:
                source: 'data/icons/iconset/circle.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y


        Button:
            size_hint_y: None
            text: 'Weather'
            Image:
                source: 'data/icons/iconset/weather.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        Button:
            size_hint_y: None
            text: 'Configuration'
            Image:
                source: 'data/icons/iconset/wrench.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y


