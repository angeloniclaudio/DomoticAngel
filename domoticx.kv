#:kivy 1.8.0
#:import Factory kivy.factory.Factory


<ButtonAp@Button>:
    label: textfield
    icon: iconfield

    BoxLayout:
        orientation: "vertical"
        pos: self.parent.pos
        size: self.parent.size
        padding: self.parent.height/10
        spacing: self.parent.height/20
        Image:
            id: iconfield
            #source: 'data/icons/iconset/light.png'
            data: None
            size_hint_y: None
            allow_stretch: True
            height: self.parent.height/2.5*1
        Label:
            id: textfield
            text: 'testo'
            font_size: '20sp'
            font_name: 'data/font/fontFuture.otf'




<DomoticXScreen>:
    ScrollView:
        do_scroll_x: False
        do_scroll_y: False if root.fullscreen else (content.height > root.height - dp(16))
        AnchorLayout:
            size_hint_y: None
            height: root.height if root.fullscreen else max(root.height, content.height)
            GridLayout:
                id: content
                cols: 1
                spacing: '8dp'
                padding: '8dp'
                size_hint: (1, 1) if root.fullscreen else (.8, None)
                height: self.height if root.fullscreen else self.minimum_height



BoxLayout:
    orientation: 'vertical'

    canvas.before:
        Color:
            rgb: .6, .6, .6
        Rectangle:
            size: self.size
            source: 'data/background.png'

    ActionBar:
        ActionView:
            id: av
            use_separator: True

            ActionPrevious:
                #with_previous: (False if sm.current_screen.name == 'button' else True) if sm.current_screen else False
                title: 'DomoticX' + ('' if not app.current_title else ' - {}'.format(app.current_title))
                app_icon: 'data/icons/iconset/construction.png'
                app_icon_height: 32
                app_icon_width: 32
                on_release: app.go_previous_screen()

            ActionButton:
                text: 'Settings'
                icon: 'data/icons/iconset/wrench.png'
                on_release: app.open_settings()

    ScreenManager:
        id: sm
        on_current_screen:
            idx = app.screen_names.index(args[1].name)
            if idx > -1: app.hierarchy.append(idx)


    BoxLayout:
        id:bottom_bar
        size_hint_y: None
        height: self.parent.height/10
        background: 1, 1, 1


        Label:
            text: app.crudeclock.text
            font_size: '25sp'
            font_name: 'data/font/fontFuture.otf'



